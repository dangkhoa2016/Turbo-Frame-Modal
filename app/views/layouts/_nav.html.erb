
<nav class='navbar navbar-expand-lg bg-body-tertiary'>
  <div class='container-fluid'>
    <%= link_to 'Rails v7', root_path, class: 'navbar-brand' %>
    <button class='navbar-toggler' type='button' data-bs-toggle='collapse'
      data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <div class='collapse navbar-collapse' id='navbarNav'>
      <ul class='navbar-nav'>
        <% user_menus.each do |menu| %>
          <li class='nav-item'>
            <% url = get_menu_link(menu[:id]) %>
            <% is_active = is_current_page?(menu[:name], url) %>
            <%= link_to menu[:name], url,
              class: is_active ? 'nav-link text-primary' : 'nav-link',
              'aria-current': is_active ? 'page' : nil,
              data: { turbo_frame: '_top' }
            %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
